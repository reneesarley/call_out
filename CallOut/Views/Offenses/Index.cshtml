<h1>Add A New Offense</h1>
<form action="/offenses/offense-form" method="post">
    <div class="form-group">
        <label for="description">Enter a description of the offense.</label>
        <input type="text" name="description">
    </div>
    <div class="form-group">
        <label for="politician">Select the politician</label>
            <select class="form-control form-control-sm" name="politician_select">
            @foreach (var politician in Model)
            {
               <option value="@politician.id">@politician.firstName @politician.lastName</option> 
            }
            </select>
    </div>
    <div class="form-group">
        <label for="types">Choose what type of offense</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="1" name="sexism">
          <label class="form-check-label" for="sexism">
            sexism
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="2" name="racism">
          <label class="form-check-label" for="racism">
            racism
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="3" name="misogyny">
          <label class="form-check-label" for="misogyny">
            misogyny
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="4" name="homophobia">
          <label class="form-check-label" for="homophobia">
            racism
          </label>
        </div>
    </div>
    <button type="submit">Submit</button>
</form>


